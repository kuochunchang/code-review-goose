{
  "name": "goose-code-review",
  "version": "1.0.0",
  "description": "AI-assisted code review tool with local web UI - View, analyze and review code with AI-powered insights",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "goose": "./dist/index.js",
    "goose-code-review": "./dist/index.js"
  },
  "files": [
    "dist",
    "server-dist",
    "web-dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "npm run build:compile && npm run build:copy",
    "build:compile": "tsc -p tsconfig.json",
    "build:copy": "mkdir -p server-dist web-dist && cp -r ../server/dist/* server-dist/ && cp -r ../web/dist/* web-dist/",
    "clean": "rm -rf dist server-dist web-dist",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@code-review-goose/server": "file:../server",
    "commander": "^11.1.0",
    "detect-port": "^1.5.1",
    "open": "^9.1.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/detect-port": "^1.3.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "code-review",
    "ai",
    "cli",
    "developer-tools",
    "static-analysis",
    "code-quality",
    "openai",
    "uml",
    "visualization",
    "monaco-editor",
    "typescript",
    "javascript",
    "vue"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kuochunchang/code-review-goose.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/kuochunchang/code-review-goose/issues"
  },
  "homepage": "https://github.com/kuochunchang/code-review-goose#readme",
  "author": "Kuo-Chun Chang",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
